/* pages/game/index.wxss */

.page__bd {
  padding-top: 10px;
}

.weui-panel:before {
  border-top: 0px;
}

.weui-panel:after {
  border-bottom: 0px;
}

.weui-badge {
  font-size: 14px;
}

.event-item-desc {
  padding-left: 10px;
  padding: 0.15em 0.4em;
  line-height: 1.2;
  vertical-align: middle;
}

.placeholder {
  margin: 5px;
  padding: 0 10px;
  text-align: center;
  line-height: 2.3em;
}

.team-item-header {
  width: 64px;
  height: 64px;
  display: inline-block;
}

.team-item-header image {
  width: 64px;
  height: 64px;
  border-radius: 50%;
  border: 1px solid gray;
}

.game-item-quizz {
  padding: 2px 0px 3px;
}

.game-item-quizz .weui-flex__item {
  position: relative;
  color: #8f8f94;
  font-size: 14px;
  text-align: center;
  vertical-align: middle;
  justify-content: center;
}

.game-item-quizz .game-item-quizz-title:before {
  content: " ";
  position: absolute;
  left: 0;
  top: 5px;
  right: 0;
  padding-top: 20px;
  height: 12px;
  border-left: 1rpx solid #d9d9d9;
  color: #e5e5e5;
  left: 15px;
}

.game-item-quizz .game-item-quizz-title-first-child {
  border-left: 0px;
}

.game-item-quizz-time {
  font-size: 14px;
}

.game-item-quizz .weui-media-box__title_in-text {
  margin-bottom: 5px;
}

.game-item-quizz .weui-cell {
  padding: 5px 15px 5px;
}

.game-item-quizz-badge {
  border-radius: 0px;
  font-size: 14px;
}

.game-item-quizz-choice {
  display: inline-block;
  padding: 0.15em 0.4em;
  line-height: 1.2;
  text-align: left;
  font-size: 14px;
  vertical-align: middle;
  border-radius: 0px;
}

.game-item-guess-tab .weui-panel__hd {
  padding: 14px 15px 0px;
}

.game-item-guess-tab .weui-panel__hd:after {
  border-bottom: 0rpx;
}

.game-item-guess-tab .game-item-guess-title {
  font-size: 14px;
  color: #000;
}

.game-item-guess-tab .game-item-guess-placeholder {
  margin: 5px;
  padding: 0 5px;
  text-align: center;
  line-height: 2em;
}

.game-item-guess-tab .game-item-guess-choice-item {
  width: 100%;
  height: 50px;
  border: 1px solid #93b76a;
  display: inline-block;
  background-color: #e4f3d5;
  font-size: 14px;
}

.game-item-guess-tab .game-item-guess-choice-item view {
  height: 20px;
}

.bet-mask {
  z-index: 9998;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: #000;
  opacity: 0.4;
  filter: alpha(opacity=40);
  /*display: none;*/
}

.bet-panel {
  z-index: 9999;
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100;
  background-color: #fff;
}

.bet-panel .weui-panel__hd {
  padding: 5px 10px 0px;
  height: 30px;
}

.bet-panel .weui-panel__bd{
  padding: 2px 10px;
}

.bet-panel .weui-panel__hd:after {
  /*border-bottom: 0px;*/
  left:0px;
}

.bet-panel .weui-cell {
  padding: 0px 0px;
}

.bet-panel .bet-cell-hd {
  font-size: 16px;
  color: #000;
}

.bet-panel .bet-cell-bd {
  font-size: 16px;
  color: #f7bb23;
}

.bet-panel .weui-flex {
  padding: 5px 0px;
}

.bet-panel .bet-value {
  width: 80%;
  margin: 0px 5px;
  height: 28px;
  line-height: 28px;
  font-size: 14px;
  text-align: center;
  border: 1px solid #ccc;
  display: inline-block;
}

.bet-panel input {
  width: 80%;
  margin: 0px 5px;
  height: 28px;
  line-height: 28px;
  font-size: 14px;
  text-align: center;
  border: 1px solid #ccc;
  display: inline-block;
  min-height:1.4rem;
}

.text-yellow{
  color: #f7bb23;
}

.bet-panel .weui-btn{
  border-radius:0px;
  border: 0px;
}

.bet-panel button[type="primary"] {
  background-color:#f7bb23;
}

.bet-panel .button-hover[type="primary"] {
  background-color:#f7bb23;
}

.bet-vale-selected{
  background-color:#f7bb23;
  color: #fff;
}

.bet-vale-selected:after{
  border: 1px solid #f7bb23;
}

.page_ft{
  position: relative;
  color: #fff;
  font-size: 14px;
  text-align: center;
}


.game-item__ft {
	position: relative;
	line-height: 50px;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex
}

.game-item__ft:after {
	content: " ";
	position: absolute;
	left: 0;
	bottom: 0;
	right: 0;
	height: 1px;
	color: #d5d5d6
}

.game-item__ft__btn {
	position: relative;
	display: block;
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	flex: 1;
	color: #fff;
	text-align: center
}

.game-item__ft__btn:after {
	content: " ";
	position: absolute;
	left: 0;
	bottom: 0;
	width: 1px;
	border-left: 0rpx solid #d5d5d6;
}

.game-item__ft__btn_default {
  background-color:#7ACF2D;
}

.game-item__ft__btn_primary {
  background-color:#F5A658;
}